grammar org.xtext.nordakademie.evaluation.Evaluation with org.eclipse.xtext.common.Terminals

generate evaluation "http://www.xtext.org/nordakademie/evaluation/Evaluation"

Survey:
	'survey'
	name=ID
	title=STRING
	(greeting=STRING)?
	//total time estimated for survey: tbd
	//(duration=STRING)?
	pages+=Page*
;

Page:
	'page' name=ID '('
	question=Question
	//referred page
	(forwarding?='forwarding to ->' followingPage=[Page|ID])?	
	')'
;
	
Question:
	Freetext | Selection | Chart | Rating 
//	| Calendar:tbd
;

Freetext:
	'freetext' name=ID question=STRING
;

Selection:
	'select' name=ID question=STRING '(' choices+=Choice* ')'	
;

Choice:
	(freetext?='freetext')? name=ID bulletPoint=STRING	
;

Chart:
	//chart with choices and graduations for each
	'chart' name=ID question=STRING '(' choices+=Choice* ')' 'x' '(' graduations+=Graduation* ')'
;

Graduation:
	(name=ID)? statement=STRING
;

Rating:
	'rating' name=ID question=STRING ratingQuantity=INT
;

