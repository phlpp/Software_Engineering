grammar org.xtext.nordakademie.evaluation.Evaluation with org.eclipse.xtext.common.Terminals

generate evaluation "http://www.xtext.org/nordakademie/evaluation/Evaluation"

Survey:
	'survey'
	name=ID
	title=STRING
	(greeting=STRING)?
	//total time estimated for survey: tbd
	(duration=STRING)?
	questions+=Question*;
	
Question:
	Freetext | Selection 
//	tbd | Rating | Chart | Calender	
;

Freetext:
	'freetext' name=ID question=STRING
;

Selection:
	'select' name=ID question=STRING '(' choices+=Choice* ')'	
;

Choice:
	(freetext?='freetext')? name=ID bulletPoint=STRING	
;

