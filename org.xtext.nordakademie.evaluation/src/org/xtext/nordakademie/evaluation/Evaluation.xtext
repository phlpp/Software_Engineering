grammar org.xtext.nordakademie.evaluation.Evaluation with org.eclipse.xtext.common.Terminals

generate evaluation "http://www.xtext.org/nordakademie/evaluation/Evaluation"

Survey:
	'survey'
	name=ID
	title=STRING
	(greeting=STRING)?
	//total time estimated for survey: tbd
	(duration=STRING)?
	questions+=Question*;
	
Question:
	FreetextQuestion | Selection 
//	tbd | RatingQuestion | ChartQuestion 	
;

FreetextQuestion:
	'text' name=ID text=STRING
;

Selection:
	'select' name=ID text=STRING '(' choices+=Choice* ')'	
;

Choice:
	name=ID text=STRING	
;

